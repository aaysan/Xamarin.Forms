<?xml version="1.0" encoding="utf-8"?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    xmlns:local="clr-namespace:CampaignDets" 
    x:Class="CampaignDets.CampaignDetsPage">

    <StackLayout Padding = "0">
        <Grid Padding = "0" HeightRequest = "175">
            <Grid.RowDefinitions>
                <RowDefinition Height = "0.2*"/>
                <RowDefinition Height = "0.8*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width = "0.2*"/>
                <ColumnDefinition Width = "0.8*"/>
            </Grid.ColumnDefinitions>

            <Image 
                Source = "http://www.mercedes-benz.co.uk/content/media_library/unitedkingdom/mpc_unitedkingdom/passenger_cars_ng/products/new_cars/cla-class/cla_coupe_homepage.object-Single-MEDIA.tmp/cla-coupe-hp1000x470.jpg"
                Grid.RowSpan = "2"
                Grid.ColumnSpan = "2"/>

            <Button Grid.Row = "0" Grid.Column = "0" Text = "B" 
        TextColor = "Blue" 
        AnchorX = "0" AnchorY = "40"/>
            <Label Grid.Row = "0" Grid.Column = "1" Text = "Kampanyalar"
                TextColor = "Blue"
                VerticalOptions = "Start" HorizontalOptions = "Center" XAlign = "20"/>
        </Grid>
    </StackLayout>
    
</ContentPage>
